<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numpad="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textView_title"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/lato"
        android:text="QIX Buy"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="#E5D5D5"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/amountButton"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_lightgray_radius"
        android:fontFamily="@font/lato"
        android:gravity="top|right"
        android:paddingTop="20dp"
        android:paddingRight="5dp"
        android:text="250"
        android:textAllCaps="false"
        android:textColor="@color/ampm_text_color"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        numpad:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qixAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="20dp"
        android:elevation="3dp"
        android:outlineProvider="none"
        android:paddingRight="5dp"
        android:text="QIX"
        android:textColor="@color/ampm_text_color"
        android:textSize="30sp"
        numpad:layout_constraintBottom_toBottomOf="@+id/amountButton"
        numpad:layout_constraintEnd_toEndOf="parent" />

    <cat.xojan.numpad.NumPadView
        android:id="@+id/numPadView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        app:custom_button1_background="@drawable/keypad_orange_c"
        app:custom_button2_background="@drawable/icon_green_tick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountButton"
        app:textSize="12sp"
        numpad:textColor="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>


